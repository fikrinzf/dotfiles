configuration {
    font:                   "Iosevka Nerd Font 12";
    show-icons:             true;
	  icon-theme: 					  "WhiteSur";
    display-drun: 					"ïŒ’ ";
    drun-display-format:    "{name}";
    disable-history:        false;
    fullscreen:             false;
	  hide-scrollbar: 				true;
	  sidebar-mode: 					false;
}

@import "colors.rasi"

window {
    transparency:           "real";
    background-color:       @bg2;
    text-color:             @fg;
    border:							    2px;
	  border-color:					  @orange;
	  width:							    500px;
    location:               center;
    x-offset:               0;
    y-offset:               0;
}

prompt {
    enabled: 						    true;
    padding: 						    9px 0px 14px 14px;
	  background-color: 			@bg2;
	  text-color: 					  @green;
	  font:							      "Iosevka Nerd Font 17";
}

entry {
    background-color:       @bg2;
    text-color:             @fg2;
    placeholder-color:      #fff;
    expand:                 true;
    horizontal-align:       0;
    placeholder:            " Search...";
	  padding:    						15px 0px 0px 15px;
    margin:                 0px 250px 0px 0px;
    border-radius:          0px 0px 0px 0px;
    blink:                  true;
}

inputbar {
	  children: 			    		[ prompt, entry ];
    background-color:       @bg2;
    text-color:             @fg2;
    expand:                 false;
	  border:						      0px;
    border-radius:          12px;
	  border-color:		    		@ac;
    spacing:                0px;
}

listview {
    background-color:       @bg;
    padding:                10px 10px 10px 10px;
    columns:                1;
    lines:                  8;
    spacing:                4px;
    cycle:                  true;
    dynamic:                true;
    layout:                 vertical;
}

mainbox {
    background-color:       @bg2;
    children:               [ inputbar, listview ];
    spacing:               	0px;
    padding:                0px;
}

element {
    background-color:       @bg;
    text-color:             @fg;
    orientation:            horizontal;
    border-radius:          0px;
    padding: 						    8px 8px 8px 20px;
}

element-icon {
    size:                   20px;
    border:                 0px;
    background-color:       @transparent;
    text-color:             @fg2;
}

element-text {
    expand:                 true;
    horizontal-align:       0;
    vertical-align:         0.5;
    margin:                 0px 2.5px 0px 2.5px;
    background-color:       @transparent;
    text-color:             inherit;
}

element selected {
    background-color:       @bg2;
    text-color:             @orange;
	  border:							    0 0 0 5px;
    border-radius:          0px;
    border-color:          	@orange;
}
